{
  "servers": {
    "weather-server": {
      "transport": "stdio",
      "command": "uv",
      "args": ["--directory", "src/mcp_demo", "run", "weather_server.py"]
    },
    "google-calendar": {
      "command": "npx",
      "args": ["@cocal/google-calendar-mcp"],
      "env": {
        "GOOGLE_OAUTH_CREDENTIALS": "src/mcp_demo/credentials.json"
      }
    }
  }
}
